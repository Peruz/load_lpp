@article{robinson2008,
  title = {Advancing Process-based Watershed Hydrological Research Using Near-surface Geophysics: A Vision for, and Review of, Electrical and Magnetic Geophysical Methods},
  shorttitle = {Advancing Process-based Watershed Hydrological Research Using Near-surface Geophysics},
  author = {Robinson, D. A. and Binley, A. and Crook, N. and Day-Lewis, F. D. and Ferr{\'e}, T. P. A. and Grauch, V. J. S. and Knight, R. and Knoll, M. and Lakshmi, V. and Miller, R. and Nyquist, J. and Pellerin, L. and Singha, K. and Slater, L.},
