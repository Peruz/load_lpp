@article{revil2022,
  title = {Induced {{Polarization}} as a {{Tool}} to {{Assess Mineral Deposits}}: {{A Review}}},
  shorttitle = {Induced {{Polarization}} as a {{Tool}} to {{Assess Mineral Deposits}}},
  author = {Revil, Andr{\'e} and Vaudelet, Pierre and Su, Zhaoyang and Chen, Rujun},
